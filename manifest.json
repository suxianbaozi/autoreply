{
  "name": "微博助手",
  "version": "1.0",
  "manifest_version": 2,
  "description": "微博助手，自动回复",
  "icons": { "128": "icon.png","64":"icon.png" },
  "browser_action": {
    "default_icon": "icon.png",
    "default_popup": "popup.html"
  },
  "content_scripts": [
    {
      "matches": ["http://*.weibo.com/u*"],
      "js": ["jquery.js","content.js"]
    }
  ],
  "permissions": [
    "http://*.weibo.com/*",
    "tabs",
    "http://qiu.guwenzi.org/*"
  ]
}